[
  {
    "name": "tamura-fargate-springboot",
    "image": "495599736331.dkr.ecr.ap-northeast-1.amazonaws.com/tamura-app-login-spring-boot:latest",
    "essential" : true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "web",
        "awslogs-group": "/ecs/springboot"
      }
    },
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080,
        "protocol": "tcp",
        "appProtocol": "http"
      }
    ],
    "secrets": [
      {
        "name": "DB_ENDPOINT",
        "valueFrom": "${aws_ssm_parameter.rds_db_host.arn}"
      },
      {
        "name": "DB_NAME",
        "valueFrom": "${aws_ssm_parameter.rds_db_name.arn}"
      },
      {
        "name": "DB_USER",
        "valueFrom": "${aws_ssm_parameter.rds_db_user.arn}"
      },
      {
        "name": "DB_PASS",
        "valueFrom": "${aws_ssm_parameter.rds_db_pass.arn}"
      }
    ]
  }
]
